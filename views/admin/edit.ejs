<!DOCTYPE html>
<html lang="en">

<%- include ('../partials/adminheader.ejs') %>

    <body>
        <%- include ('../partials/adminnav.ejs') %>
            <section class="mt-5">
                <div class="card form-card w-50 m-auto " style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class=" d-flex align-items-center">
                            <div class="card-body  p-auto p-lg-5">
                               
                                    <% user.forEach(data=>{ %>
                                        <form id="form" class="mt-2 text-light">
                                            <div class="form-outline input-control mb-4  ">
                                                <label class="form-label" for="form2Example17">Name</label>
                                                <input type="text" id="name" class="form-control form-control "
                                                    name="username" value="<%= data.name %>" onfocusout="validateName()" />
                                                    <div class="error"></div>
                                            </div>
                                            <div class="form-outline input-control mb-4 ">
                                                <label class="form-label" for="form2Example17">Email </label>
                                                <input type="email" id="email" class="form-control form-control"
                                                    name="email" value="<%= data.email %> " onfocusout="validateEmail()"  />
                                                    <div class="error"></div>
                                            </div>
                                            <div class="form-outline input-control mb-4 ">
                                                <label class="form-label" for="form2Example27"> Password</label>
                                                <input type="password" id="password"
                                                    class="form-control form-control-lg" name="password"
                                                    value="<%= data.password %>" onfocusout="validatePassword()"  />
                                                    <div class="error"></div>
                                            </div>
                                            <div class="form-outline input-control mb-4 ">
                                                <label class="form-label" for="form2Example27"> Confirm Your
                                                    Password</label>
                                                <input type="password" id="password2"
                                                    class="form-control form-control-lg" value="<%= data.password %>" onfocusout="validatePassword2()"  />
                                                    <div class="error"></div>
                                                </div>
                                            
                                                <button class="btn btn-outline-success" id="savechange"
                                                    onclick="savechanges()" data-url="<%= data._id %>">Save
                                                    Changes</button>
                                                <button id="delete-item"
                                                    class="btn btn-outline-danger ms-2"
                                                    onclick="deleteitem()" data-url="<%= data._id %>">
                                                    Delete</button>
                                            
                                        </form>
                                        <%})%>
                                        
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <script src="/scripts/admin-script.js"></script>
           
            </script>
    </body>

</html>